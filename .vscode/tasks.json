  "version": "2.0.0",
  "tasks": [
    {
      "label": "PDF",
      "type": "shell",
      "command": "cd resources/Paper && make Paper.pdf && open Paper.pdf",
      "problemMatcher": []
    },
    {
      "label": "SpinUp Dev",
      "type": "shell",
      "command": "docker-compose -f docker-compose.yml -f docker-compose.override.yml up",
      "problemMatcher": []
    },
    {
      "label": "SpinUp UI",
      "type": "shell",
      "command": "cd ui && yarn start",
      "problemMatcher": []
    },
    {
      "label": "Watch API",
      "type": "shell",
      "command": "cd api && yarn watch",
      "problemMatcher": []
    },
    {
      "label": "Attach Logs",
      "type": "shell",
      "command": "docker-compose -f docker-compose.yml -f docker-compose.override.yml logs -f",
      "problemMatcher": []
    },
    {
      "label": "Prettier UI",
      "type": "shell",
      "command": "cd ui && yarn prettier",
      "problemMatcher": []
    }
  ]
}