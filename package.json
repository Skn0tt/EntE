{
  "name": "ente",
  "license": "AGPL-3.0-or-later",
  "author": {
    "email": "info@simonknott.de",
    "name": "Simon Knott",
    "url": "https://simonknott.de"
  },
  "repository": "https://gitlab.com/Skn0tt/EntE",
  "private": true,
  "workspaces": [
    "packages/ente-api",
    "packages/ente-db",
    "packages/ente-lang",
    "packages/ente-parser",
    "packages/ente-redux",
    "packages/ente-types",
    "packages/ente-ui"
  ],
  "scripts": {
    "precommit": "pretty-quick --staged",
    "preversion": "yarn test:unit && ./scripts/dockerapp-version.js update",
    "test:unit": "yarn jest",
    "test:unit:watch": "yarn jest --watch",
    "test:unit:ci":
      "yarn jest --ci --coverage --testResultsProcessor=\"jest-junit\"",
    "test:e2e":
      "docker-app render --set API_VERSION=latest --set UI_VERSION=latest | docker-compose -f - up -d && sleep 5 && BASE_URL=http://localhost:80 yarn testcafe chrome tests/e2e && docker-app render | docker-compose -f - down",
    "test:e2e:ci":
      "testcafe chrome:headless tests/e2e/**/* -S screenshots -r xunit:e2e.xml"
  },
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/enzyme": "^3.1.9",
    "@types/jest": "^22.2.2",
    "@types/mockdate": "^2.0.0",
    "@types/react-test-renderer": "^16.0.1",
    "@types/sinon": "^4.3.1",
    "chai": "^4.1.2",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "husky": "^0.14.3",
    "jest": "^23.6.0",
    "jest-junit": "^3.7.0",
    "lerna": "^2.9.0",
    "mockdate": "^2.0.2",
    "prettier": "^1.11.1",
    "pretty-quick": "^1.4.1",
    "react-router-enzyme-context": "^1.2.0",
    "react-test-renderer": "^16.3.1",
    "reflect-metadata": "^0.1.12",
    "sinon": "^4.5.0",
    "testcafe": "^0.20.5",
    "testdouble": "^3.7.0",
    "testdouble-jest": "^2.0.0",
    "ts-jest": "^23.10.4",
    "typescript": "^3.0.1"
  },
  "dependencies": {
    "npm": "^5.8.0"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    },
    "setupTestFrameworkScriptFile": "<rootDir>/tests/jestSetup.js",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "collectCoverageFrom": [
      "packages/*/src/**/*.{ts,tsx,js,jsx}",
      "!packages/*/src/**/styles.ts"
    ],
    "coveragePathIgnorePatterns": [".*\\.d\\.ts"],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$":
        "<rootDir>/tests/assetsTransformer.js",
      "\\.(css|less)$": "<rootDir>/tests/assetsTransformer.js"
    }
  }
}
