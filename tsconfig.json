{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "baseUrl": "./packages/",
    "skipLibCheck": true, // see https://github.com/DefinitelyTyped/DefinitelyTyped/issues/16825,
    "paths": {
      "ente-api": ["./ente-api/src"],
      "ente-lang": ["./ente-lang/src"],
      "ente-parser": ["./ente-parser/src"],
      "ente-redux": ["./ente-redux/src"],
      "ente-types": ["./ente-types/src"],
      "ente-ui": ["./ente-ui/src"]
    },
    "noEmit": true,
    "jsx": "react",
    "experimentalDecorators": true,
    "lib": ["es2015", "es2016"]

    // Enable later!
    /*
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true
    */
  }
}
